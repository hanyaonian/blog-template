{
  "name": "koa-blog-template",
  "version": "1.0.0",
  "main": "app.ts",
  "scripts": {
    "start": "ts-node ./app.ts",
    "build": "tsc",
    "serve": "nodemon",
    "lint": "eslint **/*.ts --fix"
  },
  "author": "Michael",
  "repository": {
    "type": "git",
    "url": "https://github.com/hanyaonian/blog-template.git"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./**/*"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "@koa/multer": "^3.0.0",
    "@types/koa-static": "^4.0.1",
    "koa": "2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^4.1.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^8.0.8",
    "koa-static-cache": "^5.1.4",
    "koa2-cors": "^2.0.6",
    "log4js": "^3.0.6",
    "mongoose": "^5.5.5",
    "multer": "^1.4.2",
    "svg-captcha": "^1.4.0",
    "word-match-helper": "^1.0.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static-cache": "^5.1.0",
    "@types/koa2-cors": "^2.0.1",
    "@types/mongoose": "^5.10.3",
    "@types/multer": "^1.4.5",
    "jsonwebtoken": "^8.5.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
